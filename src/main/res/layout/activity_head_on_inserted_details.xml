<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_inserted_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.servicesprovider.jme.view.ShowInsertedDetails">


    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/color_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color"
            android:paddingTop="@dimen/t0_padding"
            android:paddingBottom="@dimen/t0_padding"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Count"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Time"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="No. Of Nets"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total Weight"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Total Tare Weight"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Net\nWeight"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cumulative Weight."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/t0_size"
                android:visibility="gone"
                android:layout_weight="1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_head_on_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnHeadOnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:rippleColor="@color/color_ripple"
                android:clickable="true"
                app:backgroundTint="@color/app_color"
                android:layout_margin="@dimen/margin_large"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:background="@color/app_color"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_head_on_nets_number"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_small"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="@dimen/t4_size"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/color_text"/>
            <TextView
                android:id="@+id/tv_head_on_show_net_total_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/app_color"
                android:textSize="@dimen/t4_size"
                android:textColor="@color/white"
                android:layout_marginRight="3dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:background="@color/color_text"/>
            <TextView
                android:id="@+id/tv_head_on_show_total_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/app_color"
                android:textSize="@dimen/t4_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="3dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
