<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_item_weight_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sl_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/color_text"
                android:textSize="@dimen/t0_size"
                android:visibility="gone"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="20"
                android:textSize="@dimen/t0_size"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_no_nets"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="21"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_total_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="22"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_total_tare_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2440000000"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_net_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1200"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_cumulative_wt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="200"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_group_person_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="200"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_team_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="200"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>